<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sloz_grey"
    tools:context=".home.Home">

    <ImageView
        android:id="@+id/home_bg"
        android:layout_width="442dp"
        android:layout_height="565dp"
        android:layout_marginBottom="332dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_capadocia" />

    <TextView
        android:id="@+id/home_site_title3"
        android:layout_width="296dp"
        android:layout_height="49dp"
        android:layout_marginTop="484dp"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/dest_pop"
        android:textColor="@color/light_black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/home_busqueda_btn"
        android:layout_width="339dp"
        android:layout_height="53dp"
        android:background="@drawable/comp_round_btn"
        android:drawableStart="@drawable/ic_lupa"
        android:drawableLeft="@drawable/ic_lupa"
        android:drawablePadding="12dp"
        android:gravity="start|center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/busqueda"
        android:textAllCaps="false"
        android:textColor="@color/silver"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <Button
        android:id="@+id/home_ver_hoteles"
        android:layout_width="161dp"
        android:layout_height="47dp"
        android:background="@drawable/comp_round_btn"
        android:gravity="center"
        android:text="@string/ver_hoteles"
        android:textAllCaps="false"
        android:textColor="@color/sloz_grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.532" />

    <TextView
        android:id="@+id/home_site_title2"
        android:layout_width="293dp"
        android:layout_height="53dp"
        android:layout_marginTop="328dp"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/capadocia_body"
        android:textColor="@color/sloz_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_site_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="268dp"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/capadocia"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="404dp"
        android:layout_height="174dp"
        android:fadingEdge="horizontal"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_site_title3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingRight="18dp" >

            <ImageView
                android:id="@+id/malaga_image"
                android:layout_width="222dp"
                android:layout_height="157dp"
                android:contentDescription="@null"
                android:soundEffectsEnabled="false"
                app:srcCompat="@drawable/malaga" />

            <ImageView
                android:id="@+id/paris_image"
                android:layout_width="229dp"
                android:layout_height="157dp"
                android:contentDescription="@null"
                android:soundEffectsEnabled="false"
                app:srcCompat="@drawable/paris" />
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>